<Window x:Class="DiskPeek.Views.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options"
        Width="460" SizeToContent="Height"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource TextPrimaryBrush}"
        FontFamily="Segoe UI"
        FontSize="13"
        WindowStartupLocation="CenterOwner"
        TextOptions.TextFormattingMode="Display">

    <Window.Resources>
        <!-- TextBox style matching the dark theme -->
        <Style x:Key="SettingsTextBox" TargetType="TextBox">
            <Setter Property="Background"      Value="{StaticResource CardBrush}"/>
            <Setter Property="Foreground"      Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush"     Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding"         Value="8,5"/>
            <Setter Property="CaretBrush"      Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="SelectionBrush"  Value="{StaticResource AccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- RadioButton style matching the dark theme -->
        <Style TargetType="RadioButton">
            <Setter Property="Foreground"   Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Cursor"       Value="Hand"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ══════════════════ CACHE SECTION ══════════════════════════════════ -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="CACHE"
                       FontSize="10" FontWeight="SemiBold"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,8"/>
            <Border Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="16,14">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBox Style="{StaticResource SettingsTextBox}"
                                 Text="{Binding CacheMaxAgeDays, UpdateSourceTrigger=PropertyChanged}"
                                 Width="56"
                                 TextAlignment="Center"/>
                        <TextBlock Text=" days"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="6,0,0,0"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Max cache age"/>
                        <TextBlock Text="0 = never expire"
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </StackPanel>

        <!-- ══════════════════ SCAN SECTION ═══════════════════════════════════ -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="SCAN"
                       FontSize="10" FontWeight="SemiBold"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,8"/>
            <Border Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="16,14">
                <StackPanel>

                    <!-- Max depth row -->
                    <DockPanel Margin="0,0,0,16">
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     Text="{Binding MaxScanDepth, UpdateSourceTrigger=PropertyChanged}"
                                     Width="56"
                                     TextAlignment="Center"/>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Max scan depth"/>
                            <TextBlock Text="0 = unlimited (use built-in default)"
                                       FontSize="11"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </DockPanel>

                    <!-- Separator -->
                    <Border Height="1"
                            Background="{StaticResource BorderBrush}"
                            Margin="0,0,0,14"/>

                    <!-- Excluded folders header -->
                    <TextBlock Text="Excluded folders"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>

                    <!-- Excluded folders list -->
                    <ItemsControl ItemsSource="{Binding ExcludedFolders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DockPanel Margin="0,2">
                                    <Button DockPanel.Dock="Right"
                                            Content="✕"
                                            Style="{StaticResource GhostButton}"
                                            Command="{Binding DataContext.RemoveFolderCommand,
                                                      RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="6,3"
                                            FontSize="11"
                                            Foreground="{StaticResource TextSecondaryBrush}"
                                            ToolTip="Remove"/>
                                    <Border Background="{StaticResource CardBrush}"
                                            CornerRadius="4"
                                            Padding="10,5"
                                            Margin="0,0,4,0">
                                        <TextBlock Text="{Binding}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="12"/>
                                    </Border>
                                </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Add folder row -->
                    <DockPanel Margin="0,8,0,0">
                        <Button DockPanel.Dock="Right"
                                Content="+ Add"
                                Style="{StaticResource ModernButton}"
                                Command="{Binding AddFolderCommand}"
                                Padding="12,5"
                                FontSize="12"
                                Margin="6,0,0,0"/>
                        <TextBox Style="{StaticResource SettingsTextBox}"
                                 Text="{Binding NewFolderName, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="12">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding AddFolderCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                    </DockPanel>

                </StackPanel>
            </Border>
        </StackPanel>

        <!-- ══════════════════ DISPLAY SECTION ════════════════════════════════ -->
        <StackPanel Grid.Row="4">
            <TextBlock Text="DISPLAY"
                       FontSize="10" FontWeight="SemiBold"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,8"/>
            <Border Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="16,14">
                <StackPanel>

                    <!-- Default view row -->
                    <DockPanel Margin="0,0,0,14">
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                            <RadioButton Content="Treemap"
                                         IsChecked="{Binding IsDefaultTreemap}"
                                         GroupName="DefaultView"
                                         Margin="0,0,16,0"/>
                            <RadioButton Content="Table"
                                         IsChecked="{Binding IsDefaultTable}"
                                         GroupName="DefaultView"/>
                        </StackPanel>
                        <TextBlock Text="Default view" VerticalAlignment="Center"/>
                    </DockPanel>

                    <!-- Separator -->
                    <Border Height="1"
                            Background="{StaticResource BorderBrush}"
                            Margin="0,0,0,14"/>

                    <!-- Max children per directory row -->
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     Text="{Binding MaxChildrenDisplay, UpdateSourceTrigger=PropertyChanged}"
                                     Width="56"
                                     TextAlignment="Center"/>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Max items per directory"/>
                            <TextBlock Text="0 = show all"
                                       FontSize="11"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </DockPanel>

                </StackPanel>
            </Border>
        </StackPanel>

        <!-- ══════════════════ BUTTONS ═════════════════════════════════════════ -->
        <DockPanel Grid.Row="6" HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource GhostButton}"
                    Padding="16,7"
                    Margin="0,0,8,0"/>
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource AccentButton}"
                    Padding="20,7"/>
        </DockPanel>

    </Grid>
</Window>
